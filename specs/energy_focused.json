{
  "metadata": {
    "name": "Energy Optimized Factory",
    "version": "1.0.0",
    "description": "Factory with smart grid integration and renewable optimization",
    "parent": "minimal.json"
  },
  "subsystem_implementations": {
    "energy": "smart_grid",
    "energy_optimizer": "renewable_optimizer",
    "transport": "adaptive_transport",
    "monitoring": "digital_twin"
  },
